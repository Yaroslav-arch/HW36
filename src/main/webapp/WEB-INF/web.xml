<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>first-servlet</servlet-name>
        <servlet-class>lysenko.FirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>second-servlet</servlet-name>
        <servlet-class>lysenko.SecondServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>first-servlet</servlet-name>
        <url-pattern>/visits</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>second-servlet</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>
</web-app>